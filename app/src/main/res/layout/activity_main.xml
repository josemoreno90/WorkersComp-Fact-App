<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003366"
    android:padding="50dp"
    android:id="@+id/relativeLayout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/didYouKnowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did you know...!"
        android:textColor="#C2A545"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/factTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Not hiring a lawyer for your Workers' Compensation case can make it more difficult to file a Workers' Compensation claim."
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/showFactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#C2A545"

        android:text="Show Next Fact"
        android:textColor="#003366" />

</RelativeLayout>